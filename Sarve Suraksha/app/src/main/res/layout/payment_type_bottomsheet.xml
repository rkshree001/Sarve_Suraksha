<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root_view"
    android:layout_height="match_parent"
    android:background="#99000000"
    tools:context="com.bnet.sarvesuraksha.view.Profile_Page_Section.Profile_Page.ProfilePage">

    <LinearLayout
        android:id="@+id/bottomSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/main"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_in_bg_curve"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/sign_in_main_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/close_icon"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/close_round_icon"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/headerTxt"

                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/interextrabold"
                        android:textColor="@color/black"
                        android:text="Payment type"
                        android:lineHeight="24dp"
                        android:letterSpacing="-0.01"
                        android:textSize="18dp" />

                    <View
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#e5e5e5"/>



                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/paymentTypeRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/monthlyRadioBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Monthly"
                                android:fontFamily="@font/inter_500"
                                android:textSize="14sp"
                                android:paddingLeft="15dp"
                                android:textColor="@color/black222222"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e5e5e5"/>

                            <RadioButton
                                android:id="@+id/quartelyRadioBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:fontFamily="@font/inter_500"
                                android:textSize="14sp"
                                android:textColor="@color/black222222"
                                android:text="@string/quarterly_with_discount"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e5e5e5"/>

                            <RadioButton
                                android:id="@+id/halfYearlyRadioBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:fontFamily="@font/inter_500"
                                android:textSize="14sp"
                                android:textColor="@color/black222222"
                                android:text="@string/half_yearly_with_discount"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e5e5e5"/>

                            <RadioButton
                                android:id="@+id/yearlyRadioBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:fontFamily="@font/inter_500"
                                android:textSize="14sp"
                                android:textColor="@color/black222222"
                                android:text="@string/yearly_with_discount"/>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:layout_marginTop="25dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginBottom="25dp"
                            android:id="@+id/updateLifeCover"
                            android:layout_width="match_parent"
                            android:layout_height="51dp"
                            android:backgroundTint="#FFB534"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:background="@drawable/bg_curve_2">

                            <TextView
                                android:id="@+id/Verify_TV"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interextrabold"
                                android:textColor="#000000"
                                android:text="Update"
                                android:lineHeight="24dp"
                                android:letterSpacing="-0.01"
                                android:textSize="16dp" />


                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
