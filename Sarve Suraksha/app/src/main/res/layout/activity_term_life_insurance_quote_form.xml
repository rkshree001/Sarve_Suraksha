<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.bnet.sarvesuraksha.view.Landing_Page_Section.Term_Life_Insurance.TermLifeInsurancePostQuoteForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:padding="5dp"

                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:src="@drawable/profile_back">



                </ImageView>




            </LinearLayout>

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/ToolBarText"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/inter_600"
                android:textColor="#666666"
                android:text="Answer these 4 following questions &amp; help us curate the best policy"
                android:lineHeight="24dp"
                android:letterSpacing="-0.01"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/occupation_ind"
                        android:background="@drawable/small_round_icon"
                        android:layout_width="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="24dp">
                        <ImageView
                            android:id="@+id/occupationIV"
                            android:layout_gravity="center"
                            android:foregroundGravity="center"
                            android:src="@drawable/small_round_icon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            app:tint="#06B217" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="58dp"
                    android:layout_height="2dp"
                    android:background="@drawable/vector_line"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <LinearLayout
                        android:id="@+id/annual_income_LL"
                        android:background="@drawable/small_round_icon"
                        android:layout_width="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="24dp">
                        <ImageView
                            android:id="@+id/annual_income_ind_IV"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:foregroundGravity="center"
                            android:src="@drawable/small_round_icon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            app:tint="#06B217" />

                        <TextView
                            android:id="@+id/annual_income_ind_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:letterSpacing="-0.01"
                            android:text="2"
                            android:textColor="#CC000000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="58dp"
                    android:layout_height="2dp"
                    android:background="@drawable/vector_line"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <LinearLayout
                        android:id="@+id/eduLL"
                        android:background="@drawable/small_round_icon"
                        android:layout_width="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="24dp">
                        <ImageView
                            android:id="@+id/eduIV"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:foregroundGravity="center"
                            android:src="@drawable/small_round_icon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            app:tint="#06B217" />

                        <TextView
                            android:id="@+id/eduTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:letterSpacing="-0.01"
                            android:text="3"
                            android:textColor="#CC000000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="58dp"
                    android:layout_height="2dp"
                    android:background="@drawable/vector_line"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <LinearLayout
                        android:id="@+id/smoke_LL"
                        android:background="@drawable/small_round_icon"
                        android:layout_width="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="24dp">
                        <ImageView
                            android:id="@+id/smoke_IV"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:foregroundGravity="center"
                            android:src="@drawable/small_round_icon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            app:tint="#06B217" />

                        <TextView
                            android:id="@+id/smoke_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:letterSpacing="-0.01"
                            android:text="4"
                            android:textColor="#CC000000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>





            </RadioGroup>




        </LinearLayout>


        <LinearLayout
            android:visibility="visible"
            android:id="@+id/occupationLL"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_700"
                    android:textColor="#000000"
                    android:text="Select your occupation"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="18dp" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    android:textColor="#666666"
                    android:text="Because every occupation deserves it’s own spotlight in coverage"
                    android:lineHeight="16.94dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/salaried_ll"
                    android:background="@drawable/bg_curve_3dp_plain_stroke"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="49dp">

                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="20dp"
                        android:src="@drawable/salaried"
                        android:layout_height="20dp">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_500"
                        android:textColor="#666666"
                        android:text="Salaried"
                        android:lineHeight="16.94dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/tick_salaried"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="16dp"
                            android:src="@drawable/tick_rounded"
                            android:layout_height="16dp">

                        </ImageView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/self_employed_ll"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_curve_3dp_plain_stroke"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="49dp">

                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="20dp"
                        android:src="@drawable/self_employed"
                        android:layout_height="20dp">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_500"
                        android:textColor="#666666"
                        android:text="Self Employed/ Business"
                        android:lineHeight="16.94dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/tick_self_employed"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="16dp"
                            android:src="@drawable/tick_rounded"
                            android:layout_height="16dp">

                        </ImageView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/house_wife_ll"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_curve_3dp_plain_stroke"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="49dp">

                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="20dp"
                        android:src="@drawable/house_wife"
                        android:layout_height="20dp">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_500"
                        android:textColor="#666666"
                        android:text="Housewife"
                        android:lineHeight="16.94dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/tick_house_wife"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="16dp"
                            android:src="@drawable/tick_rounded"
                            android:layout_height="16dp">

                        </ImageView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/annualIncomeLL"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/annualIncomeTV"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_700"
                    android:textColor="#000000"
                    android:text="Annual income"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="18dp" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    android:textColor="#666666"
                    android:text="This is required to calculate the right sum assured for you"
                    android:lineHeight="16.94dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />

            </LinearLayout>

            <ListView
                android:id="@+id/listViewAnnualIncome"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/educationLL"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/educationTV"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_700"
                    android:textColor="#000000"
                    android:text="Education qualification"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="18dp" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    android:textColor="#666666"
                    android:text="This will help us filter out the best plan as per your requirement"
                    android:lineHeight="16.94dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/graduate_and_above_ll"
                    android:background="@drawable/bg_curve_3dp_plain_stroke"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="49dp">

                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="20dp"
                        android:src="@drawable/graduations"
                        android:layout_height="20dp">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_500"
                        android:textColor="#666666"
                        android:text="Graduate &amp; above"
                        android:lineHeight="16.94dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/tick_graduate_and_above"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="16dp"
                            android:src="@drawable/tick_rounded"
                            android:layout_height="16dp">

                        </ImageView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pass12_ll"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_curve_3dp_plain_stroke"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="49dp">

                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="20dp"
                        android:src="@drawable/pass10_12"
                        android:layout_height="20dp">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_500"
                        android:textColor="#666666"
                        android:text="12th Pass"
                        android:lineHeight="16.94dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/tick_12pass"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="16dp"
                            android:src="@drawable/tick_rounded"
                            android:layout_height="16dp">

                        </ImageView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pass10_ll"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_curve_3dp_plain_stroke"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="49dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/pass10_12">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_500"
                        android:textColor="#666666"
                        android:text="10th Pass"
                        android:lineHeight="16.94dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/tick_10pass"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="16dp"
                            android:src="@drawable/tick_rounded"
                            android:layout_height="16dp">

                        </ImageView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/smokeLL"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/smokeTV"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_700"
                    android:textColor="#000000"
                    android:text="Have you smoked or consumed tobacco in the last 12 months?"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/yes_smoked"
                    android:background="@drawable/bg_curve_3dp_plain_stroke"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="49dp">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="@font/inter_500"
                        android:textColor="#666666"
                        android:text="Yes"
                        android:lineHeight="16.94dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/no_smoked"
                    android:background="@drawable/bg_curve_3dp_plain_stroke"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="49dp">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="@font/inter_500"
                        android:textColor="#666666"
                        android:text="No"
                        android:lineHeight="16.94dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>