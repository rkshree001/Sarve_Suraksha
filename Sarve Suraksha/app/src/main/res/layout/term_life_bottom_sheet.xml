<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    tools:context="com.bnet.sarvesuraksha.view.Profile_Page_Section.Profile_Page.ProfilePage">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_in_bg_curve"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/close_icon"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_round_icon"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/signInText"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/interextrabold"
                    android:textColor="@color/black"
                    android:text="Price Summary"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="18dp" />
                <View

                    android:layout_marginHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#e5e5e5"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_700"
                    android:textColor="@color/black"
                    android:text="Plan Details"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />
                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginLeft="20dp"

                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="76dp"
                            android:layout_height="42dp">

                            <LinearLayout
                                android:id="@+id/round_tint"
                                android:gravity="center"
                                android:background="@drawable/vehicle_img_bg_curve"
                                android:orientation="vertical"
                                android:layout_width="76dp"
                                android:layout_height="42dp">

                                <ImageView
                                    android:id="@+id/policy_image"
                                    android:layout_width="55dp"
                                    android:scaleType="fitXY"
                                    android:layout_height="40dp" />

                            </LinearLayout>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/policyName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:fontFamily="@font/inter_700"
                                android:textColor="@color/black"
                                android:text="Care Supreme Direct Term Plan"
                                android:lineHeight="24dp"
                                android:letterSpacing="-0.01"
                                android:textSize="14dp" />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#e5e5e5"/>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter"
                        android:text="Cover"
                        android:textColor="#666666"
                        android:textAlignment="textStart"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/cover"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#222222"
                        android:fontFamily="@font/inter_500"
                        android:gravity="end"
                        android:text="₹6,291"
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter"
                        android:text="Cover up to"
                        android:textColor="#666666"
                        android:textAlignment="textStart"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/coverUpTo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#222222"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        android:text="50 Years"
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter"
                        android:text="Payment type"
                        android:textColor="#666666"
                        android:textAlignment="textStart"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/paymentType"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#222222"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        android:text="Monthly"
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter"
                        android:text="Payment term"
                        android:textColor="#666666"
                        android:textAlignment="textStart"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/paymentTenure"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#222222"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        android:text="23 Years"
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/addOnsLL"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/interextrabold"
                            android:text="Selected Add-ons"
                            android:textColor="#292929"
                            android:textAlignment="textStart"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/inter"
                            android:text="Critical Illness"
                            android:textColor="#222222"
                            android:textAlignment="textStart"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/criticalIllness"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:textColor="#222222"
                            android:fontFamily="@font/inter"
                            android:gravity="end"
                            android:text="₹3,162"
                            android:textSize="14sp"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/inter"
                            android:text="OPD care"
                            android:textColor="#222222"
                            android:textAlignment="textStart"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/opdCare"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:textColor="#222222"
                            android:fontFamily="@font/inter"
                            android:gravity="end"
                            android:text="+ ₹666"
                            android:textSize="14sp"

                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/interextrabold"
                        android:text="Premium Details"
                        android:textColor="#292929"
                        android:textAlignment="textStart"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter"
                        android:text="Base premium"
                        android:textColor="#222222"
                        android:textAlignment="textStart"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/basePremium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#222222"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        android:text="₹3,162"
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter"
                        android:text="GST @18%"
                        android:textColor="#222222"
                        android:textAlignment="textStart"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/gstpercentage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#222222"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        android:text="+ ₹666"
                        android:textSize="14sp"

                        />
                </LinearLayout>



                <View
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#e5e5e5"/>


                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/interextrabold"
                        android:text="Payable Amount"
                        android:textColor="#292929"
                        android:textAlignment="textStart"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/payableAmount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#292929"
                        android:fontFamily="@font/interextrabold"
                        android:gravity="end"
                        android:text="₹3,879"
                        android:textSize="14sp"

                        />
                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginHorizontal="20dp"

                    android:id="@+id/proceedAndPayLL"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/log_out_bg"
                    android:backgroundTint="#560fe5"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/proceedAndPayTxtView"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/intersemibold"
                        android:textColor="#FFFFFF"
                        android:text="Proceed &amp; Pay"
                        android:lineHeight="24dp"
                        android:letterSpacing="-0.01"
                        android:drawableRight="@drawable/teenyicons_arrow_up_outline"
                        android:textSize="16dp" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
