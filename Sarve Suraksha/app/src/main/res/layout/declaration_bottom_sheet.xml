<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#99000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/curveRound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interextrabold"
                    android:text="Declaration"
                    android:textColor="#222222"
                    android:textAlignment="textStart"
                    android:textSize="18dp" />
                <LinearLayout
                    android:id="@+id/closeIcon"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/carbon_close_outline">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#e5e5e5" />
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="I hereby declare that all information provided above is true, and I accept all Terms &amp; conditions"
                android:fontFamily="@font/inter"
                android:lineHeight="12dp"
                android:textSize="10dp" />
            <View
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />
            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I hereby consent to receive information from Central KYC Registry through SMS/email on the registered number/email address."
                android:fontFamily="@font/inter"
                android:paddingLeft="10dp"
                android:lineHeight="12dp"
                android:textSize="10dp" />
            <View
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#e5e5e5" />
            <LinearLayout

                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/proceedAndPayLL"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/log_out_bg"
                android:backgroundTint="#560fe5"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/proceedAndPayTxtView"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/intersemibold"
                    android:textColor="#FFFFFF"
                    android:text="Proceed &amp; Pay"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:drawableRight="@drawable/teenyicons_arrow_up_outline"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
