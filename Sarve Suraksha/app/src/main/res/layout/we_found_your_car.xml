<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="540dp">


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/close_round_icon"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/LL_BG"
                android:background="@drawable/car_detail_foung_bg"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/skip_TV"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_600"
                    android:textColor="#666666"
                    android:text="We found your Car"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/carImageSet"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/car_ins_vehicle"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/VehicleModelName"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_600"
                    android:textColor="#000000"
                    android:text="Hyundai Creta"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/carNumber"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_700"
                    android:textColor="#000000"
                    android:text="RJ08cb6168"
                    android:textAllCaps="true"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginBottom="15dp"
                    android:id="@+id/vheicleType"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_400"
                    android:textColor="#666666"
                    android:text="1.6 E-Petrol-2021"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/confirmAndProceed"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:backgroundTint="#560FE5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_curve_3dp">

                    <TextView
                        android:id="@+id/Verify_TV"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_700"
                        android:textColor="@color/white"
                        android:text="Confirm &amp; Proceed"
                        android:lineHeight="24dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/editCarDetails"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ediT_car_details"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_400"
                    android:textColor="#000000"
                    android:text="Not your car? Edit details"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/edit_car_number"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/edit_Icon"
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit"
                        android:backgroundTint="#000000" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>