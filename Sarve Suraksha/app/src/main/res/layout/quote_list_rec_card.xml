<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:backgroundTint="@color/white"
        android:background="@drawable/requires_fileds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/round_tint"
                    android:gravity="center"
                    android:background="@drawable/vehicle_img_bg_curve"
                    android:orientation="vertical"
                    android:layout_width="76dp"
                    android:layout_height="42dp">

                    <ImageView
                        android:id="@+id/policy_image"
                        android:layout_width="55dp"
                        android:scaleType="fitXY"
                        android:layout_height="40dp" />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/policy_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter"
                            android:textColor="#292929"
                            android:text="Digit own damage"
                            android:lineHeight="21dp"
                            android:textSize="16dp" />



                    </LinearLayout>







                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/IdvCover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/inter"
                        android:lineHeight="21dp"
                        android:text="₹ 5,06,170"
                        android:textColor="#292929"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coverage_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/intersemibold"
                        android:lineHeight="21dp"
                        android:text="IDV Cover"
                        android:textColor="@color/placeHolderGrey"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/confirmAndProceed"
                            android:paddingHorizontal="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:backgroundTint="#560FE5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/bg_curve_3dp">

                            <TextView
                                android:id="@+id/premium"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interextrabold"
                                android:textColor="@color/white"
                                android:text=" ₹3,879/ year"
                                android:lineHeight="24dp"
                                android:letterSpacing="-0.01"
                                android:textSize="16dp" />


                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/availabe_add_ons_parent"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#fff4e0"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/health_and_safety"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/intersemibold"
                android:letterSpacing="-0.01"
                android:lineHeight="24dp"
                android:layout_marginHorizontal="10dp"
                android:text="Available add ons"
                android:textColor="@color/black222222"
                android:textSize="14dp"
                />

            <ImageView
                android:id="@+id/availabe_add_ons_parent_arrow_img"
                android:layout_marginRight="20dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/arrow_down_icon"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/availabe_add_ons_child"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:background="#fffbf5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>





        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/road_side_assistance_icon"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/intersemibold"
                android:letterSpacing="-0.01"
                android:lineHeight="24dp"
                android:layout_marginHorizontal="10dp"
                android:text="24x7 roadside assistance"
                android:textColor="@color/black222222"
                android:textSize="12dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/road_side_assistance_icon"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/intersemibold"
                android:letterSpacing="-0.01"
                android:lineHeight="24dp"
                android:layout_marginHorizontal="10dp"
                android:text="24x7 roadside assistance"
                android:textColor="@color/black222222"
                android:textSize="12dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:background="@drawable/bottom_left_right_3dp">

                <TextView
                    android:drawablePadding="2dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interextrabold"
                    android:letterSpacing="-0.01"
                    android:lineHeight="24dp"
                    android:drawableLeft="@drawable/info_icon"
                    android:layout_marginLeft="5dp"
                    android:text="Compare premium"
                    android:textColor="@color/black222222"
                    android:textSize="14dp">

                </TextView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/pb_1"/>
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/intersemibold"
                        android:textColor="#2E2E2E"
                        android:text="₹4,880"
                        android:lineHeight="21dp"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/pb_2"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/intersemibold"
                        android:lineHeight="21dp"
                        android:text="₹3,900"
                        android:textColor="#2E2E2E"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>