<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:background="@drawable/alert_dialog_bg"
    android:backgroundTint="@color/white"
    android:layout_height="421dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="246dp"
                android:layout_height="147dp"
                android:background="@drawable/log_out"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_marginHorizontal="25dp"
                android:id="@+id/AlertTextMsg"
                android:textSize="16dp"
                android:layout_marginTop="25dp"
                android:lineHeight="21dp"
                android:textAlignment="center"
                android:text="Oh No! Youâ€™re leaving...\nAre you sure?"
                android:fontFamily="@font/interextrabold"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:id="@+id/no_BTN"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:background="@drawable/bg_curve_2"
            android:backgroundTint="#ffb534">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/intersemibold"
                android:textColor="@color/black"

                android:text="Naah, Just Kidding"
                android:lineHeight="24dp"
                android:letterSpacing="-0.01"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="35dp"
            android:layout_marginTop="15dp"
            android:id="@+id/yes_LogOut"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:background="@drawable/log_out_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/intersemibold"
                android:textColor="@color/black"

                android:text="Yes, Log me out"
                android:lineHeight="24dp"
                android:letterSpacing="-0.01"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>