<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/parentLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/recomendedLL"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginRight="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_width="103dp"
                        android:layout_height="21dp"
                        android:background="@drawable/bottom_left_right_3dp"
                        android:backgroundTint="#FFDBC9">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_500"
                            android:textAlignment="center"
                            android:textColor="#F86F03"
                            android:text="Recommended"
                            android:lineHeight="21dp"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/round_tint"
                            android:gravity="center"
                            android:background="@drawable/vehicle_img_bg_curve"
                            android:orientation="vertical"
                            android:layout_width="76dp"
                            android:layout_height="42dp">

                            <ImageView
                                android:layout_margin="3dp"
                                android:id="@+id/policy_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/policy_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/inter_700"
                                    android:textColor="#292929"
                                    android:text="Digit own damage"
                                    android:lineHeight="21dp"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/view_plan_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/inter_500"
                                    android:textColor="#0A6EBD"
                                    android:text="View Plan Details"
                                    android:lineHeight="21dp"
                                    android:textSize="12dp" />



                            </LinearLayout>







                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/life_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_600"
                            android:textColor="#292929"
                            android:text="₹ 50 Lakh"
                            android:lineHeight="21dp"
                            android:textSize="14dp" />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_400"
                            android:textColor="#666666"
                            android:text="Life Cover"
                            android:lineHeight="21dp"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/cover_upto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_600"
                            android:textColor="#292929"
                            android:text="60 years"
                            android:lineHeight="21dp"
                            android:textSize="14dp" />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_400"
                            android:textColor="#666666"
                            android:text="Cover upto"
                            android:lineHeight="21dp"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/claim_settled"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_600"
                            android:textColor="#292929"
                            android:text="99.39%"
                            android:lineHeight="21dp"
                            android:textSize="14dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_400"
                            android:textColor="#666666"
                            android:text="Claim settled"
                            android:lineHeight="21dp"
                            android:textSize="12dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/availabe_add_ons_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_curve_2"
                    android:backgroundTint="#EBEBEB"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/health_and_safety"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/intersemibold"
                        android:letterSpacing="-0.01"
                        android:lineHeight="24dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="3 Available add-ons"
                        android:textColor="@color/black222222"
                        android:textSize="14dp"
                        />

                    <ImageView
                        android:id="@+id/availabe_add_ons_parent_arrow_img"
                        android:layout_marginRight="20dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow_down_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/availabe_add_ons_child"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15dp"
                    android:background="#F1F1F1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/addtoCompare"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/grey_bg_curve_default">



                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/compare"
                                android:textAlignment="textStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:fontFamily="@font/inter_500"
                                android:textColor="@color/black"
                                android:text="Add to compare"
                                android:textSize="12dp" />

                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/confirmAndProceed"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:backgroundTint="#FFB534"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/bg_curve_3dp">

                        <TextView
                            android:singleLine="true"
                            android:id="@+id/premium"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_600"
                            android:textColor="@color/black"
                            android:text=" ₹3,879 "
                            android:lineHeight="24dp"
                            android:letterSpacing="-0.01"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/year_month"
                            android:gravity="center"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_500"
                            android:textColor="@color/black"
                            android:text="/ month"
                            android:lineHeight="24dp"
                            android:letterSpacing="-0.01"
                            android:textSize="14dp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>