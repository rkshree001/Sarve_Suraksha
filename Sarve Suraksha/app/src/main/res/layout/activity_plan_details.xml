<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f4ec"
    tools:context="com.bnet.sarvesuraksha.view.Landing_Page_Section.Term_Life_Insurance.PlanDetails">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/goBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.2"
                android:padding="5dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:src="@drawable/profile_back">


                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2">
                <TextView
                    android:id="@+id/headerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_700"
                    android:letterSpacing="-0.01"
                    android:lineHeight="24dp"
                    android:text="Add-on Riders"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter_500"
                    android:text="Edit your search "
                    android:textColor="#666666"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="90dp"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bg_curve_3dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="107dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/round_tint"
                                android:gravity="center"
                                android:background="@drawable/vehicle_img_bg_curve"
                                android:orientation="vertical"
                                android:layout_width="76dp"
                                android:layout_height="42dp">

                                <ImageView
                                    android:layout_margin="3dp"
                                    android:id="@+id/policy_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">
                                        <TextView
                                            android:id="@+id/life_cover"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/inter_600"
                                            android:textColor="#292929"
                                            android:text="₹ 50 Lakh"
                                            android:lineHeight="21dp"
                                            android:textSize="14dp" />
                                        <TextView

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/inter_400"
                                            android:textColor="#666666"
                                            android:text="Life Cover"
                                            android:lineHeight="21dp"
                                            android:textSize="12dp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">
                                        <TextView
                                            android:id="@+id/cover_upto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/inter_600"
                                            android:textColor="#292929"
                                            android:text="60 years"
                                            android:lineHeight="21dp"
                                            android:textSize="14dp" />
                                        <TextView

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/inter_400"
                                            android:textColor="#666666"
                                            android:text="Cover upto"
                                            android:lineHeight="21dp"
                                            android:textSize="12dp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">
                                        <TextView
                                            android:id="@+id/claim_settled"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/inter_600"
                                            android:textColor="#292929"
                                            android:text="99.39%"
                                            android:lineHeight="21dp"
                                            android:textSize="14dp" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/inter_400"
                                            android:textColor="#666666"
                                            android:text="Claim settled"
                                            android:lineHeight="21dp"
                                            android:textSize="12dp" />
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_17"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginHorizontal="10dp"
                                android:id="@+id/payableAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_600"
                                android:textColor="#292929"
                                android:text="Payable Amount"
                                android:lineHeight="21dp"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_marginHorizontal="10dp"
                                android:id="@+id/priceBreakUp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter"
                                android:textColor="#0A6EBD"
                                android:text="Price Breakup"
                                android:lineHeight="21dp"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:layout_marginHorizontal="10dp"
                                android:id="@+id/totalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_700"
                                android:textColor="#292929"
                                android:text="₹3,879"
                                android:lineHeight="21dp"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>