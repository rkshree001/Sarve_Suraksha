<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical|fill_horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        
        <LinearLayout
            android:id="@+id/smokyGradient"
            android:layout_width="match_parent"
            android:layout_height="383dp"
            android:layout_gravity="bottom"
            android:background="@drawable/smokygradient"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout

                android:layout_margin="35dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health insurance"
                    android:textSize="18dp"
                    android:fontFamily="@font/ralewaysemibold"
                    android:textStyle="bold"
                    android:textColor="#008175"
                    android:textAlignment="center"
                    android:lineHeight="17dp"
                    android:letterSpacing="-0.01"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:id="@+id/sliderTextView"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Your safety net in life's playground. Let insurance company ensure no bumps and bruises!"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:lineHeight="17dp"
                    android:letterSpacing="-0.01"
                    android:layout_marginTop="15dp"/>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:backgroundTint="#FEDEA6"
                    android:background="@drawable/bg_curve_2">


                    <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/black"
                        android:text="Explore now"
                        android:lineHeight="16dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
