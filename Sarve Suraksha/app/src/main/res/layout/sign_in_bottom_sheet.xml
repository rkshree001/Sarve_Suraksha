<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#99000000"
    android:layout_height="match_parent"
    tools:context="com.bnet.sarvesuraksha.view.Profile_Page_Section.Profile_Page.ProfilePage">

    <RelativeLayout
        android:background="@drawable/sign_in_bg_curve"
        android:id="@+id/main"

        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="366dp"

            android:orientation="vertical">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/sign_in_main_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/signInText"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/ralewaysemibold"
                    android:textColor="@color/black"
                    android:text="Sign In"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:text="Welcome to Sarve Suraksha  ðŸ‘‹"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="14dp" />


                <LinearLayout
                    android:id="@+id/parentMobileLL"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/log_out_bg"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.15"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/black"
                        android:text="+91"
                        android:lineHeight="24dp"
                        android:letterSpacing="-0.01"
                        android:textSize="16dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:maxLength="10"
                        android:background="@null"
                        android:id="@+id/mobileNumber"
                        android:fontFamily="@font/intersemibold"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:hint="Mobile Number"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gifCheck"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/animation"
                        android:visibility="invisible" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/verifyLL"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:backgroundTint="#fce3b9"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/bg_curve_2">

                        <TextView
                            android:id="@+id/Verify_TV"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/interextrabold"
                            android:textColor="#bdaa8b"
                            android:text="Verify"
                            android:lineHeight="24dp"
                            android:letterSpacing="-0.01"
                            android:textSize="16dp" />


                    </LinearLayout>



                </LinearLayout>


                <TextView
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="35dp"
                    android:id="@+id/skip_TV"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interextrabold"
                    android:textColor="#666666"
                    android:text="Skip >>"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/otp_main_ll"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/ralewaysemibold"
                    android:textColor="@color/black"
                    android:text="Enter Verification Code"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.01"
                    android:textSize="20dp" />

                <LinearLayout

                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/black"
                        android:text="OTP has been sent to"
                        android:lineHeight="24dp"
                        android:letterSpacing="-0.01"
                        android:textSize="14dp" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/otpHasSentTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:textColor="#2A8164"
                        android:drawablePadding="5dp"
                        android:textStyle="bold"
                        android:lineHeight="24dp"
                        android:letterSpacing="-0.01"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:id="@+id/edit_mobile_number"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit"
                            />
                    </LinearLayout>

                </LinearLayout>



                <com.otpview.OTPTextView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="start"
                    android:id="@+id/otp_view"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    app:otp_text_size="20dp"
                    app:bar_enabled="true"

                    app:bar_error_color="@color/red"
                    app:bar_active_color="@color/black"
                    app:bar_inactive_color="@android:color/darker_gray"
                    app:hide_otp_drawable="@drawable/bg_otp_box_hide"
                    app:bar_success_color="#33cc33"
                    app:bar_margin_bottom="0dp"
                    app:bar_margin_left="2dp"
                    app:bar_margin_right="2dp"
                    app:bar_height="1.5dp"
                    app:box_margin="0dp"
                    app:height="51dp"
                    app:width="51dp"
                    app:hide_otp="false"
                    app:length="4"
                    />


                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/SignInLL"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:backgroundTint="#fce3b9"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/bg_curve_2">

                        <TextView
                            android:id="@+id/SignInTV"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/interextrabold"
                            android:textColor="#bdaa8b"
                            android:text="Sign In"
                            android:lineHeight="24dp"
                            android:letterSpacing="-0.01"
                            android:textSize="16dp" />


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/resendOtp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/black"
                        android:text="Resend OTP in "
                        android:lineHeight="24dp"
                        android:letterSpacing="-0.01"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/resendOtpTimer"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:textColor="#2A8164"
                        android:lineHeight="24dp"
                        android:letterSpacing="-0.01"
                        android:textSize="12dp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
